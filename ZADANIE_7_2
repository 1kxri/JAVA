import javax.swing.*;
import javax.swing.table.DefaultTableModel;
import java.awt.*;

public class Main extends JFrame {

    private JTable table;
    private DefaultTableModel model;
    private JLabel resultLabel;

    public Main() {

        setTitle("Монотонная последовательность");
        setSize(500, 300);
        setDefaultCloseOperation(EXIT_ON_CLOSE);
        setLayout(new BorderLayout());

        model = new DefaultTableModel(1, 10);
        table = new JTable(model);

        JButton button = new JButton("Вычислить");
        resultLabel = new JLabel("Результат: ");

        button.addActionListener(e -> calculate());

        add(new JScrollPane(table), BorderLayout.CENTER);
        add(button, BorderLayout.SOUTH);
        add(resultLabel, BorderLayout.NORTH);

        setVisible(true);
    }

    private void calculate() {
        int columns = table.getColumnCount();
        int[] arr = new int[columns];
        int size = 0;

        for (int i = 0; i < columns; i++) {
            Object value = table.getValueAt(0, i);
            if (value != null && !value.toString().isEmpty()) {
                arr[size++] = Integer.parseInt(value.toString());
            }
        }

        int[] actual = new int[size];
        System.arraycopy(arr, 0, actual, 0, size);

        resultLabel.setText("Результат: " + solution(actual));
    }

    // та же функция решения
    public static int solution(int[] arr) {

        if (arr == null || arr.length == 0)
            return 0;

        if (arr.length == 1)
            return 1;

        int max = 1;
        int up = 1;
        int down = 1;

        for (int i = 1; i < arr.length; i++) {

            if (arr[i] > arr[i - 1]) {
                up++;
                down = 1;
            } else if (arr[i] < arr[i - 1]) {
                down++;
                up = 1;
            } else {
                up = 1;
                down = 1;
            }

            max = Math.max(max, Math.max(up, down));
        }

        return max;
    }

    public static void main(String[] args) {
        new Main();
    }
}
